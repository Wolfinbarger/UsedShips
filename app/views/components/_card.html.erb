<div class="card bg-transparent border border-info" style="width: 18rem;height:363px;">
  <%= link_to spaceship_path(spaceship), class:"card-link" do  %>
    <% if spaceship.photo.attached? %>
      <%= cl_image_tag spaceship.photo.key, alt: "text", style:"width: 280px;height: 225px;"%>
    <% else %>
      <%= image_tag("https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTjYAMwk3TdZw2ihAa3UOjkv25yoZkTN5eDqA&usqp=CAU", class:"card-img-top border border-info p-2", id:"asd", alt:"Default image, Spaceballs", style:"width: 280px;height: 225px;")  %>
    <% end %>
    <div class="card-body pb-0 px-0">
      <div class="container px-2">
        <div class="d-flex justify-content-between p-0">
          <h5 class="lines"><%= spaceship.name %></h5>
          <h5 class="lines"><i class="fa-solid fa-dollar-sign"></i><%= spaceship.rate %></h5>
        </div>
      </div>
      <div class="container px-1">
        <div id = "border" class="d-flex justify-content-between p-1">
          <h5 class="lines limited"><%= spaceship.description %></h5>
        </div>
        <% if spaceship.description.length > 100 %>
          <div class="text-center mt-2">
            <button class="expand-btn btn btn-link">
              <p style="color:yellow">Read More</p>
            </button>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
